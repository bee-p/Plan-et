<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp" />
            <size
                android:height="24dp"
                android:width="240dp"
                />
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@android:color/white"
                />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="12dp" />
                <size
                    android:height="20dp"
                    android:width="230dp"
                    />
                <gradient
                    android:type="linear"
                    android:angle="0"
                    android:startColor="#1A0D48"
                    android:centerColor="#E286A5"
                    android:endColor="#FF0056"
                    />
                <stroke
                    android:width="1dp"
                    android:color="@android:color/white"
                    />
            </shape>
        </clip>
    </item>
</layer-list>