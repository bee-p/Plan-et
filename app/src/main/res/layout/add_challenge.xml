<?xml version="1.0" encoding="utf-8"?>
<!-- add_challenge -->

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_checklist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/add_challenge"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:background="#00ff0000"
            android:clipToOutline="true" />

        <Button
            android:id="@+id/add_challenge_button"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="345dp"
            android:layout_marginTop="14dp"
            android:background="#00ff0000"
            android:clipToOutline="true"

            />



        <Button

            android:id="@+id/challenge_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginTop="70dp"
            android:background="#00ff0000"
            android:clipToOutline="true"

            />

        <Button
            android:id="@+id/callenge_start_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="170dp"
            android:background="#00ff0000"
            android:clipToOutline="true"
            android:scaleType="fitCenter"

            />
        //21챌린지기 때문에 끝나는 날짜는 자동으로 설정되니까 필요없을 것 같기는 해요
        <Button

            android:id="@+id/challenge_end_date"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="230dp"
            android:background="#00ff0000"
            android:clipToOutline="true"


            />
        // 여기도 사용자 입력을 받아서 써지는 영역을 텍스트 뷰로 해야할지 뭘로 해야할지 몰라서 일단 놔두었습니다.


    </FrameLayout>
</RelativeLayout>
