<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:srcCompat="@drawable/topbar2"

                />

            <Button
                android:id="@+id/home_button"
                android:layout_width="50dp"
                android:layout_height="70dp"

                android:background="#00ff0000" />

            <Button
                android:id="@+id/ch21_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"

                android:background="#00ff0000" />

            <Button
                android:id="@+id/set_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="10dp"

                android:background="#00ff0000" />


        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="59dp"
            android:fillViewport="true"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginBottom="25dp"


                    android:adjustViewBounds="true"

                    android:clipToOutline="true"
                    app:srcCompat="@drawable/calendar_mid4" />

<!--                <TextView-->
<!--                    android:id="@+id/today"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->

<!--                    android:layout_alignParentLeft="true"-->
<!--                    android:layout_alignParentTop="true"-->
<!--                    android:layout_marginLeft="45dp"-->
<!--                    android:layout_marginTop="35dp"-->
<!--                    android:text="2020년12월11일"-->
<!--                    android:textColor="#000000"-->

<!--                    android:textSize="20sp" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <Space
                        android:id="@+id/space2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                    </Space>
                <CalendarView
                    app:layout_constraintTop_toBottomOf="@+id/space2"
                    android:id="@+id/calendarView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintStart_toStartOf="parent"

                    android:maxDate="12/31/2021"
                    android:minDate="11/01/2021"

                   />



                <TextView
                    android:id="@+id/diaryTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarView" />

                    <EditText
                        android:id="@+id/contextEditText"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="40dp"
                        android:ems="10"
                        android:hint="내용을 입력하세요."
                        android:inputType="textMultiLine"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/diaryTextView" />




                    <EditText
                        android:id="@+id/contextEditText2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="40dp"
                        android:ems="10"
                        android:hint="내용을 입력하세요."
                        android:inputType="textMultiLine"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/contextEditText" />
                    <EditText
                        android:id="@+id/contextEditText3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="40dp"
                        android:ems="10"
                        android:hint="내용을 입력하세요."
                        android:inputType="textMultiLine"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/contextEditText2" />
                    <EditText
                        android:id="@+id/contextEditText4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="40dp"
                        android:ems="10"
                        android:hint="내용을 입력하세요."
                        android:inputType="textMultiLine"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/contextEditText3" />



                </androidx.constraintlayout.widget.ConstraintLayout>



                <TextView
                    android:id="@+id/today_num"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="480dp"
                    android:text="4"
                    android:textSize="40sp"
                    android:background="android/color/transparent/"/>

                <Button

                    android:id="@+id/add_schedule"
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="325dp"
                    android:layout_marginTop="460dp"

                    android:background="#00ff0000" />

                <Button

                    android:id="@+id/add_checklist2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="325dp"
                    android:layout_marginTop="780dp"

                    android:background="#00ff0000" />
                <Button

                    android:id="@+id/add_memo2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="325dp"
                    android:layout_marginTop="950dp"

                    android:background="#00ff0000" />




            </RelativeLayout>

        </ScrollView>
        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/calendar_bottomNavi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:theme="@style/Widget.BottomNavigationView"
            app:backgroundTint="#F0F0F0"
            app:itemIconTint="@drawable/menu_selector_color"
            app:itemTextColor="@drawable/menu_selector_color"
            app:menu="@menu/menu_resource_file" />

    </RelativeLayout>


</FrameLayout>









